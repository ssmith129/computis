    <script>
        // Toggle Audit Trail Drawer
        document.addEventListener('DOMContentLoaded', function() {
            const auditTrailButton = document.querySelector('button:has(.fa-clock-rotate-left)');
            const auditTrailDrawer = document.getElementById('audit-trail');
            const auditTrailCloseButton = auditTrailDrawer.querySelector('.fa-xmark').parentElement;
            
            auditTrailButton.addEventListener('click', function() {
                auditTrailDrawer.classList.toggle('translate-x-full');
            });
            
            auditTrailCloseButton.addEventListener('click', function() {
                auditTrailDrawer.classList.add('translate-x-full');
            });
        });
    </script>

